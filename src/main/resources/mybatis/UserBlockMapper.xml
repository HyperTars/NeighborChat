<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hypertars.neighborChat.dao.UserBlockDAO">

    <select id="getUserBlocksByBid" resultType="com.hypertars.neighborChat.model.UserBlock" >
        select * from UserBlock where bid = #{bid} and status = true
    </select>

    <select id="getUserBlocksByUid" resultType="com.hypertars.neighborChat.model.UserBlock" >
        select * from UserBlock where uid = #{uid} and status = true
    </select>

    <select id="getBlocksByHid" resultType="com.hypertars.neighborChat.model.Blocks" >
        select * from Blocks where hid = #{hid}
    </select>

    <update id="update" parameterType="com.hypertars.neighborChat.model.UserBlock" >
        update UserBlock
        <set>
            <if test="uid != null and uid != 0">uid = #{uid},</if>
            <if test="bid != null and bid != 0">bid = #{bid},</if>
            <if test="status != null">status = #{status},</if>
            ubTime = now()
        </set>
        <where>
            <if test="uid != null and uid != 0 or bid != null and bid != 0" >uid = #{uid} and bid = #{bid} and status = true</if>
        </where>
    </update>

    <insert id="insert" parameterType="com.hypertars.neighborChat.model.UserBlock" >
        insert into UserBlock (uid, bid, ubTime, status) values (#{uid}, #{bid}, now(), true)
    </insert>

</mapper>
