<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hypertars.neighborChat.dao.BlockApplicationDAO">

    <sql id = "RecipientCols">
        msgid, uid
    </sql>

    <sql id = "RecipientTable">
        Recipient
    </sql>

    <select id="getRecipientyMsgid" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        SELECT Recipient FROM <include refid="RecipientTable" />
        WHERE msgid = #{msgid};
    </select>
</mapper>
